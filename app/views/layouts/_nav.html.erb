<div class="container nav_container">
  <div class="btn-group nav_hover">
    <div class="attr-nav dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <ul>
        <li class="hover-menu">
          <i class="fa fa-bars"></i>
        </li>
      </ul>
    </div>
    <ul class="dropdown-menu main-menu">
      <li class="dropdown-submenu sub-menu">
        <%= link_to t("data"), "", class: "dropdown-item menu-item", tabindex: "-1" %>
        <ul class="dropdown-menu main-menu">
          <li><%= link_to t("data"), "", class: "dropdown-item menu-item", tabindex: "-1" %></li>
        </ul>
      </li>
      <li role="separator" class="divider"></li>
      <li class="dropdown-submenu sub-menu">
        <%= link_to t("data"), "", class: "dropdown-item menu-item", tabindex: "-1" %>
        <ul class="dropdown-menu main-menu">
          <li><%= link_to t("data"), "", class: "dropdown-item menu-item", tabindex: "-1" %></li>
        </ul>
      </li>
      <li role="separator" class="divider"></li>
      <li class="dropdown-submenu sub-menu">
        <%= link_to t("data"), "", class: "dropdown-item menu-item", tabindex: "-1" %>
        <ul class="dropdown-menu main-menu">
          <li><%= link_to t("data"), "", class: "dropdown-item menu-item", tabindex: "-1" %></li>
        </ul>
      </li>
    </ul>
  </div>

  <div class="navbar-header">
    <%= link_to root_path, class: "navbar-brand", method: :get do %>
      <%= image_tag Settings.img_logo, alt: "", class: "logo" %>
    <% end %>
  </div>

  <div class="form-group has-feedback has-search search_nav">
    <span class="glyphicon glyphicon-search form-control-feedback"></span>
    <input type="text" class="form-control" placeholder="Search">
  </div>

  <div class="button_book">
    <%= link_to new_order_path, method: :get do %>
      <button class="btn btn-danger book_table">
        <%= image_tag Settings.reservation_icon, alt: "", class: "reservation_icon" %>
        <%= t "book", class: "button_book_text" %>
      </button>
    <% end %>
  </div>


  <div class="pull-right profile">
    <ul class="nav pull-right profile_ul">
      <% if logged_in? %>
        <li class="dropdown dropdown-toggle nav_dropdown" data-toggle="dropdown">
          <div class="user_name_nav">
            <%= image_tag current_user.image, alt: "", class: "user_icon" if current_user.image.attached? %>
            <div class="user_name"><p><%= current_user.name %></p></div>
          </div>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user, method: :get %></li>
            <li><%= link_to t("history"), "", method: :get %></li>
            <li class="divider"></li>
            <li><%= link_to t("logout"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li class="li_login_path">
          <%= link_to login_path, class: "link_to_login", method: :get do %>
            <button class="btn btn-danger login_btn">
              <%= t "login", class: "login_btn_text" %>
            </button>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
